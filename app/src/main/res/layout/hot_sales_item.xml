<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_margin="9dp"
    >
<!--TODO: переписать на constraint, чтобы текст не лип друг на друга-->
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:background="@color/black"

        >
        <ImageView
            android:id="@+id/imBackground"
            android:layout_width="match_parent"
            android:layout_marginStart="160dp"
            android:layout_height="match_parent"

            android:src="@color/dark_ico"/>

        <ImageView
            android:id="@+id/iconNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_new_hotsale"
            android:layout_marginTop="29dp"
            android:layout_marginStart="29dp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tvHotSalesName"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="59dp"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/sfpro_display"
            android:textSize="25sp"
            android:textFontWeight="700"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tvHotSalesDescription"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginStart="23dp"
            android:layout_marginTop="94dp"
            android:textSize="11sp"
            android:fontFamily="@font/sfpro_display"
            android:textColor="@color/white"
            android:textFontWeight="400"

            />

        <Button
            android:layout_width="98dp"
            android:layout_height="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="131dp"
            android:background="@drawable/white_button_radius_5dp"
            android:stateListAnimator="@null"
            android:text="@string/buy_now"
            android:fontFamily="@font/sfpro_display"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:textFontWeight="700"/>


    </FrameLayout>

</androidx.cardview.widget.CardView>